package ontotext.task;

import java.io.File;
import java.io.FileReader;
import java.util.Iterator;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;

public class test {
	public static void main(String[] args){
	JSONParser parser = new JSONParser();

	try{
		Object obj = parser.parse(new FileReader("src/main/resources/ontotext.json"));
		JSONObject jsonObject = (JSONObject) obj;
		
		String name = (String) jsonObject.get("name");
		JSONArray date = (JSONArray) jsonObject.get("date");
		System.out.println("album (date): " );
		Iterator<String> iterator = date.iterator();
		while (iterator.hasNext()){
			System.out.println(iterator.next());
		}
	} catch(Exception e){
		e.printStackTrace();
	}
		
	}}
